<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F5677"
    tools:context=".Screenacademic"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Select your Choice!"
        android:textColor="#E7DCDC"
        android:textSize="45dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginTop="20dp"
        android:onClick="Engineer"
        android:text="Engineer"
        android:textSize="30sp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="doctor"
        android:layout_below="@id/button2"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:onClick="Doctor"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilot"
        android:layout_below="@id/button3"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:onClick="Pilot"
        android:fontFamily="sans-serif"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CA"
        android:layout_below="@id/button4"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:onClick="Ca"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button5"
        android:layout_marginTop="20dp"
        android:onClick="Air_hostress"
        android:text="Air Hostess"
        android:textSize="30sp" />




</RelativeLayout>